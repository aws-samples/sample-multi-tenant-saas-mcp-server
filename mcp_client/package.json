{
	"name": "mcp-playground-bedrock",
	"private": true,
	"type": "module",
	"scripts": {
		"start": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
		"dev:client": "vite dev",
		"dev:server": "nodemon --exec tsx src/server/index.ts",
		"build": "vite build",
		"clean": "rm -rf node_modules/.vite dist",
		"type-check": "tsc --noEmit",
		"deploy": "./deploy.sh",
		"deploy:cdk": "cd deploy && npm install && npx cdk deploy",
		"deploy:destroy": "cd deploy && npx cdk destroy",
		"deploy:synth": "cd deploy && npx cdk synth",
		"users:create": "node scripts/manage-users.js create",
		"users:list": "node scripts/manage-users.js list",
		"users:delete": "node scripts/manage-users.js delete",
		"users:demo": "node scripts/manage-users.js demo"
	},
	"dependencies": {
		"@ai-sdk/amazon-bedrock": "^1.0.2",
		"@aws-sdk/client-bedrock-runtime": "^3.705.0",
		"@aws-sdk/client-cognito-identity": "^3.705.0",
		"@aws-sdk/client-cognito-identity-provider": "^3.705.0",
		"@aws-sdk/credential-providers": "^3.705.0",
		"@modelcontextprotocol/sdk": "1.18.0",
		"ai": "^4.3.16",
		"amazon-cognito-identity-js": "^6.3.12",
		"cors": "^2.8.5",
		"downshift": "^9.0.10",
		"express": "^4.21.2",
		"jsonwebtoken": "^9.0.2",
		"jwks-client": "^2.0.5",
		"pkce-challenge": "^4.1.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-hotkeys-hook": "^5.1.0",
		"react-markdown": "^10.1.0",
		"react-router-dom": "^7.7.1",
		"react-textarea-autosize": "^8.5.9",
		"remark-gfm": "^4.0.1",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@ai-sdk/react": "^1.2.12",
		"@modelcontextprotocol/sdk": "1.18.0",
		"@playwright/test": "^1.54.2",
		"@tailwindcss/vite": "^4.1.11",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node": "^22.10.2",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^4.7.0",
		"concurrently": "^9.1.0",
		"dotenv": "^17.2.1",
		"eslint": "^9.32.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"nodemon": "^3.1.9",
		"prettier": "^3.6.2",
		"tailwindcss": "^4.1.11",
		"tsx": "^4.19.2",
		"typescript": "5.8.3",
		"vite": "^7.0.6"
	}
}
